{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "pretty": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "removeComments": false,
        "outDir": "./dist",
        "declaration": true,
        "lib": [
            "es5",
            "es6",
            "es7"
        ]
    },
    "exclude": [
        "node_modules/",
        "tests/"
    ]
}